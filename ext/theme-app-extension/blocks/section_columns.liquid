  "name": "Section Columns",
  "target": "section",
  "javascript": "steroids.js",
  "templates": ["index", "page"],
  "settings": [
    {
      "type": "range",
      "id": "mobile_columns",
      "label": "Mobile Columns",
      "step": 1,
      "min": 1,
      "max": 3,
      "default": 1
    },
    {
      "type": "range",
      "id": "mobile_gap",
