<{{ block.settings.tag }} id="{{ block.settings.id }}" class="{{ block.settings.class }}">
  {{ block.settings.text }}
</{{ block.settings.tag }}>

<style>
  {% comment %} text size & weight on mobile {% endcomment %}
  #shopify-block-{{ block.id }} {{ block.settings.tag }} {
    {{ block.settings.size_mobile }}
    {{ block.settings.weight_mobile }}
    {{ block.settings.align_mobile }}
    margin-block-start: 0;
    margin-block-end: 0;
    word-break: break-word;
  }
  {% comment %} text size & weight on mobile {% endcomment %}
  @media (min-width: 750px) {
    #shopify-block-{{ block.id }} {{ block.settings.tag }} {
      {{ block.settings.size_tablet }}
      {{ block.settings.weight_tablet }}
      {{ block.settings.align_tablet }}
    }
  }
  {% comment %} text size & weight on desktop {% endcomment %}
  @media (min-width: 1400px) {
    #shopify-block-{{ block.id }} {{ block.settings.tag }} {
      {{ block.settings.size_desktop }}
      {{ block.settings.weight_desktop }}
      {{ block.settings.align_desktop }}
    }
  }

  {% comment %} text color {% endcomment %}
  {% if block.settings.tcolor != blank and block.settings.tcolor.alpha != 0.0 %}
  #shopify-block-{{ block.id }} {{ block.settings.tag }} {
    color: {{ block.settings.tcolor }};
  }
  #shopify-block-{{ block.id }} {{ block.settings.tag }} a {
    color: {{ block.settings.tcolor }};
    text-decoration-color: {{ block.settings.tcolor }};
  }
  {% endif %}

  {% comment %} bold text weight {% endcomment %}
  {% unless block.settings.bweight %}
  #shopify-block-{{ block.id }} {{ block.settings.tag }} strong {
    font-weight: inherit;
  }
  {% endunless %}

  {% comment %} bold text color {% endcomment %}
  {% if block.settings.bcolor != blank  and block.settings.bcolor.alpha != 0.0 %}
  #shopify-block-{{ block.id }} {{ block.settings.tag }} strong {
    color: {{ block.settings.bcolor }};
  }
  #shopify-block-{{ block.id }} {{ block.settings.tag }} a strong {
    color: {{ block.settings.bcolor }};
    text-decoration-color: {{ block.settings.bcolor }};
  }
  #shopify-block-{{ block.id }} {{ block.settings.tag }} a:has(strong) {
    color: {{ block.settings.bcolor }};
    text-decoration-color: {{ block.settings.bcolor }};
  }
  {% endif %}
</style>

<script>
  {% if block.settings.bcolor != blank  and block.settings.bcolor.alpha != 0.0 %}
  document.addEventListener('DOMContentLoaded', function () {
    window.steroids.polyfillHasSelector('#shopify-block-{{ block.id }} {{ block.settings.tag }} a', 'strong', {
      'color': '{{ block.settings.bcolor }}',
      'text-decoration-color': '{{ block.settings.bcolor }}',
    });
  });
  {% endif %}
</script>

